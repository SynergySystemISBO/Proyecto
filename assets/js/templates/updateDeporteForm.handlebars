<p class="h3 text-center"><u>Modificar deporte</u></p>
<form id="updateDeporteForm">

    <input type="number" id="iddeporte" value="{{iddeporte}}" disabled hidden>

    <fieldset>
        <legend>Datos:</legend>
        <label for="inputCreateNameDeporte">Nombre</label>
        <input type="text" class="form-control" id="inputCreateNameDeporte" value="{{nomdeporte}}" required>

    </fieldset>

    <fieldset>
        <legend>Partido:</legend>
        <div class="form-row">
            <div class="col">
                <label for="inputConvocables">Jugadores convocables:</label>
                <input type="number" class="form-control" id="inputConvocables" placeholder="Jugadores convocables..."
                    value="{{convocables}}" required>
            </div>
            <div class="col">
                <label for="inputTitulares">Jugadores titulares:</label>
                <input type="number" class="form-control" id="inputTitulares" placeholder="Jugadores titulares..."
                    value="{{titulares}}" required>
            </div>
        </div>

    </fieldset>

    <fieldset>
        <legend>Posiciones:</legend>
        <div class="form-row">
            <div class="col">
                <div class="form-outline mb-3">
                    <label for="inputPosicion">Nombre posición del jugador:</label>
                    <div class="input-group">
                        <input type="text" id="inputPosicion" class="form-control" placeholder="Nombre..." />
                        <div class="input-group-append">
                            <button id="buttonAgregarPosicion" class="btn btn-primary" type="button"><i
                                    class="fas fa-plus-circle"></i> Agregar </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive-sm">
            <table class="table" id="tablaPosiciones">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="items">
                    {{#each posiciones}}
                    <tr id="trPosicion0">
                        <td>{{this.idposicion}}</td>
                        <td class="tdPosicion">{{this.nombre}}</td>
                        <td><button type="button" class="btn btn-outline-danger float-right btnsEliminarPosicion"
                                id="buttonEliminar-0">Eliminar</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </fieldset>

    <fieldset>
        <legend>Incidencias:</legend>
        <div class="form-row">
            <div class="col">
                <div class="form-outline mb-3">
                    <div class="input-group">
                        <label for="inputNombreIncidencia">Nombre:</label>
                        <input type="text" class="form-control" id="inputNombreIncidencia" placeholder="Nombre...">
                        <div class="input-group-append">
                            <button id="buttonAgregarIncidencia" class="btn btn-primary" type="button"><i
                                    class="fas fa-plus-circle"></i> Agregar </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table" id="tablaIncidencias">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody id="itemsIncidencia">
                        {{#each incidencias}}
                        <tr id="trIncidencia{{{this.idincidencia}}}">
                            <td>{{this.idincidencia}}</td>
                            <td class="incidenciaNombre">{{this.nombre}}</td>
                            <td><button type="button" class="btn btn-outline-danger float-right btnsEliminarIncidencia"
                                    id="buttonEliminar-0">Eliminar</button></td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
    </fieldset>

    <div class="text-center">
        <button type="submit" class="btn btn-warning mt-3" id="createUserSubmitButton"><i
                class="fas fa-plus-circle"></i> Actualizar</button>
        <div class="container w-50 mt-4">
            <div class="alert" id="alert">Algo sucedió...</div>
        </div>
    </div>

</form>