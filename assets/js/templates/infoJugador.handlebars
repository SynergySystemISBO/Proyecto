<div id="jugadorInfoDiv">
  <div class="row justify-content-center">
    <img src="https://www.noticiasenserie.com/wp-content/uploads/2015/09/00134.jpg" alt="foto generica persona"
      width="300px" class="mr-5">
    <p>
      <span style="font-weight: 700;">Nombre: </span>
      <br>{{nombre}} {{apellido}}<br>
      <span style="font-weight: 700;">Fecha de nacimiento:</span>
      <br>{{nac}}
      <span style="font-weight: 700;">
        <br>Altura-Peso:
      </span>
      <br>{{altura}}cm - {{peso}}kg
      <span style="font-weight: 700;">
        <br>Dorsal
      </span>
      <br>{{dorsal}}
      <span style="font-weight: 700;">
        <br>Posicion
      </span>
      <br>{{{posicion}}}
      <span style="font-weight: 700;">
        <br>Equipo
      </span>
      <br>{{{equipo}}}
    </p>
  </div>


  <h3 class="text-center mt-4">Estadisticas</h3>
  <div class="w-50 mx-auto">
    <ul class="list-group">
      {{#each incidencias}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        {{this.nomincidencia}}
        <span class="badge badge-primary badge-pill">{{this.cantincidencia}}</span>
      </li>
      {{/each}}
    </ul>
  </div>
</div>