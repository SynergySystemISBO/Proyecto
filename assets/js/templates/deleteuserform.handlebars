<form id="deleteUserForm">
    <p class="h3 text-center"><u>Eliminar usuario</u></p>
    <div class="form-row justify-content-center">
        <div class="form-group col-md-6">
            <input type="number" id="inputIDUser" class="d-none" value="{{{valueID}}}" disabled>
            <label for="inputDeleteEmailUser">Correo electronico</label>
            <input type="text" class="form-control" id="inputDeleteEmailUser" placeholder="ejemplo@correo.com" required value="{{{valueEmail}}}" disabled>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputDeleteNameUser">Nombre</label>
            <input type="text" class="form-control" id="inputDeleteNameUser" placeholder="Nombre..." required value="{{{valueNombre}}}" disabled>
        </div>
        <div class="form-group col-md-6">
            <label for="inputDeleteApellidoUser">Apellido</label>
            <input type="text" class="form-control" id="inputDeleteApellidoUser" placeholder="Apellido..." required value="{{{valueApellido}}}" disabled>
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
            <label for="inputDeleteRolUser">Rol</label>
            <select id="inputDeleteRolUser" class="form-control" name="selectDeleteRol" required disabled>
                {{#select valueSelect}}
                <option value="" hidden>Elige una opcion:</option>
                <option value="Administrativo">Administrativo</option>
                <option value="DT">DT</option>
                <option value="Arbitro">Arbitro</option>
                <option value="Estadistico">Estadistico</option>
                <option value="Scouting">Scouting</option>
                {{/select}}
            </select>
        </div>
    </div>
    <div class="text-center">
        <button type="button" class="btn btn-danger" id="deleteUserSubmitButton" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-user-times"></i> Eliminar</button>
    </div>
</form>