<form id="updateUserForm">
    <p class="h3 text-center"><u>Modificar usuario</u></p>
    <div class="form-row justify-content-center">
        <div class="form-group col-md-6">
            <input type="number" id="inputIDUser" class="d-none" value="{{{valueID}}}" disabled>
            <label for="inputUpdateEmailUser">Correo electronico</label>
            <input type="text" class="form-control" id="inputUpdateEmailUser" placeholder="ejemplo@correo.com" required value="{{{valueEmail}}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputUpdateNameUser">Nombre</label>
            <input type="text" class="form-control" id="inputUpdateNameUser" placeholder="Nombre..." required value="{{{valueNombre}}}">
        </div>
        <div class="form-group col-md-6">
            <label for="inputUpdateApellidoUser">Apellido</label>
            <input type="text" class="form-control" id="inputUpdateApellidoUser" placeholder="Apellido..." required value="{{{valueApellido}}}">
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
            <label for="inputUpdateRolUser">Rol</label>
            <select id="inputUpdateRolUser" class="form-control" name="selectUpdateRol" required>
                {{#select valueSelect}}
                <option value="" hidden>Elige una opcion:</option>
                <option value="Administrativo">Administrativo</option>
                <option value="DT">DT</option>
                <option value="Arbitro">Arbitro</option>
                <option value="Estadistico">Estadistico</option>
                <option value="Scouting">Scouting</option>
                {{/select}}
            </select>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-warning" id="updateUserSubmitButton"><i class="fas fa-user-edit"></i> Actualizar</button>
    </div>
</form>